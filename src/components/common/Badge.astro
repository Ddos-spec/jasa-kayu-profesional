---
export interface BadgeProps {
  variant?: 'default' | 'primary' | 'secondary' | 'success' | 'warning' | 'danger';
  size?: 'sm' | 'md';
  children: string;
  class?: string;
}

const {
  variant = 'default',
  size = 'md',
  children,
  class: className = ''
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-semibold uppercase tracking-wide';

const variantClasses = {
  default: 'bg-gray-100 text-gray-800',
  primary: 'bg-wood-brown-100 text-wood-brown-800',
  secondary: 'bg-blue-100 text-blue-800',
  success: 'bg-green-100 text-green-800',
  warning: 'bg-yellow-100 text-yellow-800',
  danger: 'bg-red-100 text-red-800'
};

const sizeClasses = {
  sm: 'text-xs px-2 py-1',
  md: 'text-sm px-3 py-1.5'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} rounded-full ${className}`;
---

<span class={classes}>
  <slot />
</span>