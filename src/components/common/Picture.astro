---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata | string;
  alt: string;
  loading?: 'eager' | 'lazy';
  sizes?: string;
  class?: string;
  width?: number;
  height?: number;
  priority?: boolean;
  placeholder?: 'blur' | 'data-url' | 'dominant-color' | 'none';
}

const {
  src,
  alt,
  loading = 'lazy',
  sizes = '(max-width: 800px) 100vw, 800px',
  class: className,
  width,
  height,
  priority = false,
  placeholder = 'dominant-color'
} = Astro.props;

const computedLoading = priority ? 'eager' : loading;
---

{
  typeof src === 'string' ? (
    <img
      src={src}
      alt={alt}
      loading={computedLoading}
      class={className}
      decoding="async"
      width={width}
      height={height}
      fetchPriority={priority ? 'high' : undefined}
    />
  ) : (
    <Image
      src={src}
      alt={alt}
      loading={computedLoading}
      class={className}
      width={width}
      height={height}
      sizes={sizes}
      priority={priority}
      placeholder={placeholder}
    />
  )
}
