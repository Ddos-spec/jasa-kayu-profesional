---
interface Props {
  src: ImageMetadata;
  alt: string;
  loading?: 'eager' | 'lazy';
  sizes?: string;
  class?: string;
}

const { src, alt, loading = 'lazy', sizes = '(max-width: 800px) 100vw, 800px', class: className } = Astro.props;
---

<img {src} alt={alt} loading={loading} sizes={sizes} class:list={[className]} decoding="async" />
